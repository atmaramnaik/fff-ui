pipeline {
    agent {
        label 'Kubernetes'
    }
    environment {
        SERVICE_NAME = 'fff-ui'
    }
    stages {
        stage('Checkout Repo') {
            steps {
                script{
                    def scmVar = checkout([$class: 'GitSCM', \
                    branches: [[name: '*/master']], \
                    userRemoteConfigs: [[credentialsId: 'atmaram-github',
                                         url: "https://github.com/atmaramnaik/$SERVICE_NAME"]]])


                    env.GIT_SHA = scmVar.GIT_COMMIT
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'ls -al'
            }
        }

    }
}
